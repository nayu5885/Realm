<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/container">
    <EditText
            android:layout_width="374dp"
            android:layout_height="96dp"
            android:inputType="textPersonName"
            android:text="タイトル"
            android:ems="10"
            android:id="@+id/titleEditText"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="26dp" android:layout_marginBottom="9dp"
            app:layout_constraintBottom_toTopOf="@+id/contentEditText" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="31dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="6dp"/>
    <EditText
            android:layout_width="377dp"
            android:layout_height="316dp"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/contentEditText"
            android:hint="内容" android:layout_marginTop="9dp" app:layout_constraintTop_toBottomOf="@+id/titleEditText"
            android:layout_marginBottom="31dp" app:layout_constraintBottom_toTopOf="@+id/saveButton"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="9dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="25dp"/>
    <Button
            android:text="ほぞん"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/saveButton"
            android:layout_marginTop="26dp"
            app:layout_constraintTop_toBottomOf="@+id/contentEditText" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="188dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="135dp" android:layout_marginBottom="201dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>